&
    position absolute
    top 0px
    left -400px
    bottom 0px
    border-right 1px solid #333
    background #eee
    width 340px
    transition 0.8s left
    &.active
        left 0px
    .content
        img
            max-width 100%
            height auto
        h1
        h2
        h3
        h4
            font-weight normal
            margin 0px 10px
        h1
            margin-top 60px
            margin-bottom 12px
            font-size 1.7em
        h2
            font-size 1.2em
            margin-top 8px
            margin-bottom 3px
            color #222
        h3
            font-size 1.0em
            margin-bottom 4px
            color #333
        h4
            font-size 0.9em
            color #444
            font-style italic
